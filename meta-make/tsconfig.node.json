{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*.ts",
    "src/preload/**/*.ts",
    "src/types/*.d.ts",
    "src/common/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "module": "esnext",
    "moduleResolution": "node"
  }
}
